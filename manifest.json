{
  "manifest_version": 3,
  "name": "OmeTV Custom Video Filters",
  "version": "2.0.0",
  "description": "Apply custom video filters to OmeTV streams with improved architecture",

  "host_permissions": ["*://ome.tv/*", "*://*.ome.tv/*", "*://*.ometv.chat/*"],

  "content_scripts": [
    {
      "matches": ["*://ome.tv/*", "*://*.ome.tv/*", "*://*.ometv.chat/*"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/main.js",
        "src/utils/*.js",
        "src/core/*.js",
        "src/filters/*.js",
        "src/ui/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": []
}

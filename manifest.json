{
  "manifest_version": 3,
  "name": "OmeTV Custom Video Filters",
  "version": "1.0",
  "description": "Apply custom video filters to OmeTV streams",
  "host_permissions": [
    "*://ome.tv/*",
    "*://*.ome.tv/*", 
    "*://*.ometv.chat/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://ome.tv/*",
        "*://*.ome.tv/*",
        "*://*.ometv.chat/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "OmeTV Custom Video Filters",
  "version": "1.0",
  "description": "Apply custom video filters to OmeTV streams with real-time processing",
  "author": "lakshan1946",
  "host_permissions": [
    "*://ome.tv/*",
    "*://*.ome.tv/*", 
    "*://*.ometv.chat/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://ome.tv/*",
        "*://*.ome.tv/*",
        "*://*.ometv.chat/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/injected/injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
